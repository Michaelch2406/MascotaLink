{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "scheduler": "node local-scheduler.js",
    "dev": "concurrently --raw --kill-others-on-fail --handle-input \"cd .. && firebase emulators:start --import=./firebase-data --export-on-exit=./firebase-data\" \"node local-scheduler.js\" \"cd ../.. && node websocket-server.js\"",
    "dev-no-export": "concurrently --raw --kill-others-on-fail --handle-input \"cd .. && firebase emulators:start --import=./firebase-data\" \"node local-scheduler.js\" \"cd ../.. && node websocket-server.js\"",
    "clean-exports": "node -e \"const fs=require('fs');const path=require('path');const dir='..';fs.readdirSync(dir).filter(f=>f.startsWith('firebase-export-')).forEach(f=>fs.rmSync(path.join(dir,f),{recursive:true,force:true}));console.log('Exports cleaned');\""
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^7.0.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
