<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFC"
    tools:context=".PaseoEnCursoDuenoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/gray_text"
            app:title="Paseo en curso"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"
            app:titleTextColor="@android:color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECCIÃ“N 1: INFORMACIÃ“N DEL PASEADOR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_paseador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#F2F2F2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Foto del Paseador (Izquierda) -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_foto_paseador"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="Foto del paseador"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Mascota.Radius12"
                        app:srcCompat="@drawable/ic_user_placeholder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Nombre Paseador -->
                        <TextView
                            android:id="@+id/tv_nombre_paseador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Mascota.CardTitle"
                            android:textSize="16sp"
                            tools:text="Alex" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp">
                            
                            <TextView
                                android:id="@+id/tv_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.9 (123)"
                                android:textSize="13sp"
                                android:textColor="#9CA3AF" />
                                
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_star_filled"
                                app:tint="#FFC107"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <!-- Etiqueta Paseador -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paseador"
                            android:textSize="12sp"
                            android:textColor="#12A3ED"
                            android:layout_marginTop="2dp"/>

                        <!-- Info Mascota -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ•"
                                android:textSize="12sp"/>
                                
                            <TextView
                                android:id="@+id/tv_info_mascota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buddy, Golden Retriever"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <!-- Fecha y Hora -->
                        <TextView
                            android:id="@+id/tv_fecha_hora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            style="@style/TextAppearance.Mascota.BodyMuted"
                            android:textSize="12sp"
                            tools:text="Hoy, 10:00 AM | 30 min DuraciÃ³n" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N 2: ESTADO Y TEMPORIZADOR -->
            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_estado_en_curso"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/paseo_en_curso_state_en_progreso"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pb_progreso_paseo"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:progress="50"
                android:progressTint="#12A3ED" />

            <LinearLayout
                android:id="@+id/layout_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_horas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Mascota.BodyMuted"
                        android:text="Hours" 
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_minutos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Mascota.BodyMuted"
                        android:text="Minutes" 
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_segundos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Mascota.BodyMuted"
                        android:text="Seconds" 
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SECCIÃ“N 3: NOTAS Y FOTOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Notas y fotos" />

            <TextView
                android:id="@+id/tv_notas_paseador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_rounded"
                android:backgroundTint="#F5F5F5"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:minHeight="60dp"
                tools:text="Max estÃ¡ jugando muy bien en el parque." />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_foto_paseo"
                tools:visibility="visible" />
            <LinearLayout
                android:id="@+id/layout_fotos_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/gray_text"
                    android:src="@android:drawable/ic_menu_camera"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="El paseador aÃºn no ha subido fotos"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- SECCIÃ“N 4: ACTIVIDAD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Actividad" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_actividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_evento_actividad" />
            <TextView
                android:id="@+id/tv_actividad_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Sin actividad registrada"
                android:textColor="@color/gray_text"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- SECCIÃ“N 5: MAPA DEL RECORRIDO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Mapa del recorrido" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_round_12"
                android:clipToOutline="true">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map_fragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Overlay transparente para capturar el click y evitar conflicto de scroll -->
                <View
                    android:id="@+id/view_map_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />
                
                <!-- BotÃ³n flotante "Abrir" visual -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    app:fabSize="mini"
                    app:backgroundTint="@color/white"
                    app:tint="@color/blue_primary"
                    android:src="@drawable/ic_google"
                    android:contentDescription="Abrir en Google Maps"
                    android:clickable="false"/> <!-- Click handled by overlay -->

            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB Cancelar (Arriba) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_cancelar_paseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="192dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:backgroundTint="#F44336"
        app:tint="@android:color/white"
        app:fabSize="normal"
        android:contentDescription="Cancelar paseo" />

    <!-- FAB Contactar (Abajo) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_contactar_paseador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/ic_messages"
        app:backgroundTint="#12A3ED"
        app:tint="@android:color/white"
        app:fabSize="normal"
        android:contentDescription="Contactar paseador" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_light" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bottom_nav_background"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemActiveIndicatorStyle="@null"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav_new" />

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
