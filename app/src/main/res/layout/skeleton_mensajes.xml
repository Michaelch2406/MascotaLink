<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <!-- Header Skeleton (coincide con custom_header) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@android:color/transparent">

        <!-- Botón Atrás Skeleton -->
        <View
            android:id="@+id/skeleton_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_skeleton_circle"/>

        <!-- Título Skeleton -->
        <View
            android:id="@+id/skeleton_titulo"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/bg_skeleton_rounded"/>

        <!-- Spacer -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- RecyclerView Skeleton con conversaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skeleton_recycler_conversaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

</LinearLayout>
