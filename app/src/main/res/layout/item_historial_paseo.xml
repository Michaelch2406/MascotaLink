<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Status Indicator Strip -->
        <View
            android:id="@+id/view_status_strip"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/green_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_user_placeholder"
            app:layout_constraintStart_toEndOf="@id/view_status_strip"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Name and Role -->
        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nombre Usuario"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_fecha"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_avatar" />

        <TextView
            android:id="@+id/tv_subtitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Mascota: Buddy"
            android:textColor="@color/grey_600"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/chip_estado"
            app:layout_constraintStart_toStartOf="@id/tv_nombre"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre" />

        <!-- Date -->
        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 Nov"
            android:textColor="@color/grey_600"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nombre"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_nombre"/>

        <!-- Status Chip -->
        <TextView
            android:id="@+id/chip_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="COMPLETADO"
            android:textColor="@color/green_700"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha" />

        <!-- Details Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_status_strip"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

        <!-- Bottom Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_nombre"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <TextView
                android:id="@+id/tv_duracion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:text="30 min"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/ic_access_time"
                app:drawableTint="@color/grey_600" />

            <TextView
                android:id="@+id/tv_costo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:text="$15.00"
                android:textStyle="bold"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/ic_attach_money"
                app:drawableTint="@color/grey_600" />
            
             <ImageView
                android:id="@+id/iv_calificado"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/yellow_600"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
