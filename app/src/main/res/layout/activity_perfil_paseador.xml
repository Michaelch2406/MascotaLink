<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FAFC"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paseador"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Avatar y datos principales -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="#FFB08A"
                app:strokeWidth="4dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sofia Ramirez"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_rol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paseador de perros"
                android:textColor="#6B7280"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"/>

            <!-- Badge verificado + precio -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_verificado_badge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/blue_primary" />

                <TextView
                    android:id="@+id/tv_verificado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verificado"
                    android:textColor="@color/blue_primary"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:id="@+id/tv_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• $8/hora"
                    android:textStyle="bold"
                    android:textColor="@color/green_success"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:tabGravity="fill"
                app:tabMode="fixed" />

            <!-- Contenido de las pestañas -->
            <FrameLayout
                android:id="@+id/tab_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Pestaña "Acerca de" -->
                <LinearLayout
                    android:id="@+id/ll_acerca_de"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Video de presentación -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Video de presentación"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp"/>

                    <FrameLayout
                        android:id="@+id/video_container"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp">
                        <ImageView
                            android:id="@+id/iv_video_thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/galeria_paseos_foto1" />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_media_play"/>
                    </FrameLayout>

                    <!-- Acerca de mí -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acerca de mí"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"/>

                    <TextView
                        android:id="@+id/tv_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Soy una amante de los animales con experiencia en el cuidado de perros de todos los tamaños y razas. Ofrezco paseos personalizados adaptados a las necesidades de cada perro, asegurando ejercicio, diversión y seguridad en cada salida."/>

                    <!-- Experiencia -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/tv_experiencia_anos"
                            android:text="Experiencia: 3 años"
                            android:textStyle="bold"
                            android:textColor="@color/gray_dark" />
                        <TextView
                            android:id="@+id/tv_experiencia_desde"
                            android:text="• Desde 2022"
                            android:textColor="@color/secondary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <!-- Zona de servicio -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zona de servicio"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"/>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map_container"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="8dp"/>

                    <!-- Disponibilidad -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponibilidad"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"/>
                    <TextView
                        android:id="@+id/tv_disponibilidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Lunes a Viernes: 9 AM - 6 PM"/>

                    <!-- Tipos de perros -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipos de perros"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"/>
                    <TextView
                        android:id="@+id/tv_tipos_perros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Pequeños, Medianos, Grandes"/>

                    <!-- Métricas -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:id="@+id/tv_paseos_completados"
                            android:text="247 paseos completados"
                            android:textStyle="bold"
                            android:textColor="@color/gray_dark" />
                        <TextView
                            android:id="@+id/tv_tiempo_respuesta"
                            android:text="• Respuesta: 15 min"
                            android:textColor="@color/secondary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Pestaña "Reseñas" -->
                <LinearLayout
                    android:id="@+id/ll_resenas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Calificaciones -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calificaciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/tv_rating_valor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="48sp"
                                android:text="4.8"/>
                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.1"
                                android:rating="4.8"/>
                            <TextView
                                android:id="@+id/tv_resenas_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6B7280"
                                android:layout_marginTop="4dp"
                                android:text="125 reviews"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/barras_ratings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp"/>
                    </LinearLayout>
                    <!-- Aquí iría un RecyclerView para las reseñas individuales -->
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones de Acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_reservar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reservar"
            style="@style/Widget.MaterialComponents.Button"/>

        <Button
            android:id="@+id/btn_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>