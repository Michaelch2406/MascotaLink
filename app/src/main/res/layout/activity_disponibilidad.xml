<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".DisponibilidadActivity">

    <!-- Header / Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_container"
            android:contentDescription="AtrÃ¡s"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disponibilidad_title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disponibilidad_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- SecciÃ³n 1: Calendario Mensual Visual -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- NavegaciÃ³n del mes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/btnMesAnterior"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="â—„"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/blue_primary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tvMesActual"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Diciembre 2025"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/btnMesSiguiente"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="â–º"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/blue_primary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <!-- DÃ­as de la semana header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_lunes_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_martes_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_miercoles_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_jueves_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_viernes_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_sabado_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dia_domingo_corto"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>

                    <!-- GridView del calendario -->
                    <GridView
                        android:id="@+id/gridCalendario"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:numColumns="7"
                        android:horizontalSpacing="4dp"
                        android:verticalSpacing="4dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"/>

                    <!-- Leyenda de colores -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/calendario_disponible"
                            android:layout_marginEnd="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disponible"
                            android:textSize="10sp"
                            android:layout_marginEnd="12dp"/>

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/calendario_bloqueado"
                            android:layout_marginEnd="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bloqueado"
                            android:textSize="10sp"
                            android:layout_marginEnd="12dp"/>

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/calendario_parcial"
                            android:layout_marginEnd="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parcial"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SecciÃ³n 2: Tarjetas de AcciÃ³n RÃ¡pida -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acciones RÃ¡pidas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- Tarjeta 1: Horario EstÃ¡ndar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHorarioEstandar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ•"
                        android:textSize="24sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disponibilidad_horario_estandar"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvHorarioEstandarDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lun-Vie: 9:00 AM - 6:00 PM"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disponibilidad_editar"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 2: Bloquear DÃ­as -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBloquearDias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ–ï¸"
                        android:textSize="24sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disponibilidad_bloquear_dias"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca fechas no disponibles"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disponibilidad_configurar"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 3: Horarios Especiales -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHorariosEspeciales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="â°"
                        android:textSize="24sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disponibilidad_horarios_especiales"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configura horarios Ãºnicos para dÃ­as particulares"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disponibilidad_agregar"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SecciÃ³n 3: Lista de Configuraciones Activas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuraciones Activas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConfiguracionesActivas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/tvSinConfiguraciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay configuraciones especiales activas"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
