<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="#111827"
            app:title="Verificación de identidad"
            app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tarjeta de Selfie de Verificación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E3F2FD">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_camera"
                                android:layout_gravity="center"
                                app:tint="@color/blue_primary"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selfie de Verificación"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Requerido para verificar tu identidad"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Contenedor de preview o placeholder -->
                    <RelativeLayout
                        android:id="@+id/container_preview_selfie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/preview_selfie"
                                android:layout_width="match_parent"
                                android:layout_height="240dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Preview selfie"/>
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_eliminar_selfie"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="12dp"
                            android:text="Eliminar"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/red_error"
                            app:cornerRadius="8dp"
                            app:icon="@drawable/ic_close"
                            app:iconGravity="textStart"
                            app:iconSize="16dp"
                            app:iconTint="@color/white"/>
                    </RelativeLayout>

                    <!-- Ilustración cuando no hay selfie -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_selfie_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/blue_primary">

                        <ImageView
                            android:id="@+id/img_selfie_ilustracion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selfie"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Toca para tomar selfie"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Botón de tomar selfie -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_tomar_selfie"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Tomar Selfie"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/blue_primary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_camera"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        android:stateListAnimator="@animator/fab_press_scale"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Foto de Perfil -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_user_placeholder"
                                android:layout_gravity="center"
                                app:tint="@color/green_success"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Foto de Perfil"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Para que otros te reconozcan"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Contenedor de preview -->
                    <RelativeLayout
                        android:id="@+id/container_preview_foto_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/preview_foto_perfil"
                                android:layout_width="match_parent"
                                android:layout_height="240dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="Preview foto de perfil"/>
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_eliminar_foto_perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="12dp"
                            android:text="Eliminar"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/red_error"
                            app:cornerRadius="8dp"
                            app:icon="@drawable/ic_close"
                            app:iconGravity="textStart"
                            app:iconSize="16dp"
                            app:iconTint="@color/white"/>
                    </RelativeLayout>

                    <!-- Botones de foto de perfil -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_elegir_foto"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Galería"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/blue_primary"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:strokeColor="@color/blue_primary"
                            app:strokeWidth="2dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_gallery"
                            app:iconGravity="textStart"
                            app:iconTint="@color/blue_primary"
                            android:stateListAnimator="@animator/fab_press_scale"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_tomar_foto"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Cámara"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/green_success"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_camera"
                            app:iconGravity="textStart"
                            app:iconTint="@color/white"
                            android:stateListAnimator="@animator/fab_press_scale"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón fijo en la parte inferior con mensaje de validación -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mensaje de validación -->
            <TextView
                android:id="@+id/tv_validation_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/colorError"
                android:textSize="13sp"
                android:visibility="gone"/>

            <!-- Botón continuar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continuar_paso3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continuar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:visibility="gone"
                app:backgroundTint="@color/blue_primary"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconTint="@color/white"
                android:stateListAnimator="@animator/fab_press_scale"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
