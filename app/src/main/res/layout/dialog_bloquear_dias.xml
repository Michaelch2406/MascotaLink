<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloqueo_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"/>

        <!-- Navegación del calendario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input_rounded"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMesAnterior"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="◄"
                android:textColor="@color/gray_dark"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent"/>

            <TextView
                android:id="@+id/tvMesActual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diciembre 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMesSiguiente"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="►"
                android:textColor="@color/gray_dark"
                android:textSize="18sp"
                app:backgroundTint="@android:color/transparent"/>
        </LinearLayout>

        <!-- Días de la semana header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_lunes_corto"/>
            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_martes_corto"/>
            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_miercoles_corto"/>
            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_jueves_corto"/>
            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_viernes_corto"/>
            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_sabado_corto"/>
            <TextView
                style="@style/DayHeaderStyle"
                android:text="@string/dia_domingo_corto"/>
        </LinearLayout>

        <!-- Calendario -->
        <com.mjc.mascotalink.util.ExpandedGridView
            android:id="@+id/gridCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:layout_marginBottom="24dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_100"
            android:layout_marginBottom="16dp"/>

        <!-- Razón del bloqueo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloqueo_razon"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRazon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bloqueo_razon_hint"
                android:inputType="text"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de bloqueo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloqueo_tipo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgTipoBloqueo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbDiaCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bloqueo_tipo_dia_completo"
                android:buttonTint="@color/blue_primary"/>

            <RadioButton
                android:id="@+id/rbManana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bloqueo_tipo_manana"
                android:buttonTint="@color/blue_primary"/>

            <RadioButton
                android:id="@+id/rbTarde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bloqueo_tipo_tarde"
                android:buttonTint="@color/blue_primary"/>
        </RadioGroup>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disponibilidad_cancelar"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBloquear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bloqueo_confirmar"
                android:textColor="@color/white"
                app:backgroundTint="@color/red_error"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
