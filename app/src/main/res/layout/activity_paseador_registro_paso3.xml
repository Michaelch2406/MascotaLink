<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="#111827"
            app:title="Documentos"
            app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tarjeta de Antecedentes Penales -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E3F2FD">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_description"
                                android:layout_gravity="center"
                                app:tint="@color/blue_primary"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Antecedentes Penales"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Certificado de antecedentes penales"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sube un archivo PDF o imagen de tu certificado"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tv_antecedentes_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(ningún archivo seleccionado)"
                        android:textSize="13sp"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_subir_antecedentes"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Subir Archivo"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/blue_primary"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_upload"
                        app:iconGravity="start"
                        app:iconTint="@color/blue_primary"
                        android:textColor="@color/blue_primary"/>

                    <!-- Preview Antecedentes -->
                    <RelativeLayout
                        android:id="@+id/container_preview_antecedentes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/preview_antecedentes_img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            android:background="#E5EDF1"/>

                        <LinearLayout
                            android:id="@+id/preview_antecedentes_pdf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="#F3F4F6"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_input_get"
                                app:tint="#4B5563"/>

                            <TextView
                                android:id="@+id/tv_antecedentes_pdf_nombre"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="documento.pdf"
                                android:textColor="#111827"/>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_eliminar_antecedentes"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"
                            android:text="Eliminar"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/red_error"
                            android:textColor="@color/white"
                            app:cornerRadius="8dp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Certificado Médico -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_health"
                                android:layout_gravity="center"
                                app:tint="@color/green_success"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Certificado Médico"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Certificado médico reciente (válido 6 meses)"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sube un archivo PDF o imagen de tu certificado médico"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tv_medico_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(ningún archivo seleccionado)"
                        android:textSize="13sp"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_subir_medico"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Subir Archivo"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/green_success"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_upload"
                        app:iconGravity="start"
                        app:iconTint="@color/green_success"
                        android:textColor="@color/green_success"/>

                    <!-- Preview Médico -->
                    <RelativeLayout
                        android:id="@+id/container_preview_medico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/preview_medico_img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            android:background="#E5EDF1"/>

                        <LinearLayout
                            android:id="@+id/preview_medico_pdf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="#F3F4F6"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_input_get"
                                app:tint="#4B5563"/>

                            <TextView
                                android:id="@+id/tv_medico_pdf_nombre"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="documento.pdf"
                                android:textColor="#111827"/>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_eliminar_medico"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"
                            android:text="Eliminar"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/red_error"
                            android:textColor="@color/white"
                            app:cornerRadius="8dp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón fijo en la parte inferior -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_validation_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="@color/red_error"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_enviar_verificacion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continuar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="@color/blue_primary"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconTint="@color/white"
                android:stateListAnimator="@animator/fab_press_scale"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
