<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_feedback_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="¿Pregunta de ejemplo?"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_feedback_your_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tu respuesta: Incorrecta"
            android:textSize="14sp"
            android:textColor="@color/red_error"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_feedback_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Respuesta correcta: Correcta"
            android:textSize="14sp"
            android:textColor="@color/green_success"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_feedback_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Explicación del concepto."
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
