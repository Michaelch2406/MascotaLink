<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC"
    tools:context=".PerfilMascotaActivity">

    <!-- Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FAFC"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:contentDescription="Atrás"
                app:tint="@color/gray_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil de mascota"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Bottom Navigation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_above="@id/bottom_nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F7FAFC"
        app:menu="@menu/menu_bottom_nav_new"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/icon_color"
        app:itemTextColor="@color/icon_color"
        app:itemActiveIndicatorStyle="@null"/>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_above="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Avatar y Nombre -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar_mascota"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="#FFB08A"
                app:strokeWidth="4dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_nombre_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddy"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_descripcion_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Retriever / Macho, 3 años"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Información Básica -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información básica"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <!-- Row 1: Raza y Sexo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raza"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tv_raza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Golden Retriever"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sexo"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tv_sexo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Macho"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: Edad y Tamaño -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edad"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tv_edad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 años"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tamaño"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tv_tamano"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grande"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 3: Peso y Esterilizado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peso"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tv_peso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 kg"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Esterilizado"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tv_esterilizado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Galería -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Galería"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_galeria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_galeria_foto"/>

            <!-- Acceso rápido a secciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Más información"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"/>

            <!-- Salud y bienestar -->
            <RelativeLayout
                android:id="@+id/btn_salud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_salud"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_corazon"
                    android:layout_centerVertical="true"
                    app:tint="#FF6B6B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ic_salud"
                    android:layout_marginStart="16dp"
                    android:text="Salud y bienestar"
                    android:textColor="#111827"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#9CA3AF" />
            </RelativeLayout>

            <!-- Comportamiento y personalidad -->
            <RelativeLayout
                android:id="@+id/btn_comportamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_comportamiento"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dog"
                    android:layout_centerVertical="true"
                    app:tint="#FFB08A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ic_comportamiento"
                    android:layout_marginStart="16dp"
                    android:text="Comportamiento y personalidad"
                    android:textColor="#111827"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#9CA3AF" />
            </RelativeLayout>

            <!-- Instrucciones -->
            <RelativeLayout
                android:id="@+id/btn_instrucciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ic_instrucciones"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dog"
                    android:layout_centerVertical="true"
                    app:tint="#4A90E2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ic_instrucciones"
                    android:layout_marginStart="16dp"
                    android:text="Instrucciones"
                    android:textColor="#111827"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#9CA3AF" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
