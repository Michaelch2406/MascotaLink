<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC"
    tools:context=".MascotaInstruccionesActivity">

    <!-- Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FAFC"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:contentDescription="Atrás"
                app:tint="@color/gray_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instrucciones"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Bottom Navigation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_above="@id/bottom_nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F7FAFC"
        app:menu="@menu/menu_bottom_nav_new"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/icon_color"
        app:itemTextColor="@color/icon_color"
        app:itemActiveIndicatorStyle="@null"/>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_above="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Rutina de paseo preferida -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_walk"
                        app:tint="#FFB08A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rutina de paseo preferida"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rutina_paseo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 paseos diarios de 30 minutos"
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Correa/arnés -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dog"
                        app:tint="#4A90E2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correa/arnés"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tipo_correa_arnes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arnés tipo Y"
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Premios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_corazon"
                        app:tint="#27AE60"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premios"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_recompensas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snacks de pollo"
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Instrucciones de emergencia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_corazon"
                        app:tint="#E74C3C"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instrucciones de emergencia"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_instrucciones_emergencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Llamar al veterinario Dr. García"
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Notas adicionales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dog"
                        app:tint="#9B59B6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notas adicionales"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_notas_adicionales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Le encanta jugar con pelotas"
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
