<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".TerminosCondicionesActivity">

    <!-- Header / Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_container"
            android:contentDescription="Atrás"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Términos y Condiciones"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spacer for centering -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- Last Updated Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/blue_primary"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última actualización: Noviembre 2025"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Content Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Aceptación -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Aceptación de los Términos"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Al acceder y usar Walki, aceptas estar sujeto a estos Términos y Condiciones. Si no estás de acuerdo con alguna parte de estos términos, no debes usar nuestra plataforma."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Descripción del Servicio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Descripción del Servicio"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Walki es una plataforma que conecta dueños de mascotas con paseadores verificados. Facilitamos la comunicación y coordinación entre usuarios, pero no somos responsables directos de los servicios prestados."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Registro y Cuentas -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Registro y Cuentas de Usuario"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Debes proporcionar información precisa y actualizada\n• Eres responsable de mantener la seguridad de tu cuenta\n• No puedes compartir tu cuenta con terceros\n• Debes notificar inmediatamente cualquier uso no autorizado\n• Para ser paseador, debes pasar un proceso de verificación"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Responsabilidades del Dueño -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Responsabilidades del Dueño"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como dueño de mascota, te comprometes a:\n• Proporcionar información precisa sobre tu mascota\n• Informar sobre condiciones médicas o comportamiento especial\n• Asegurar que tu mascota esté al día con vacunas\n• Pagar por los servicios contratados\n• Tratar con respeto a los paseadores"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Responsabilidades del Paseador -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Responsabilidades del Paseador"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como paseador, te comprometes a:\n• Proporcionar el servicio según lo acordado\n• Mantener la seguridad de las mascotas\n• Seguir las instrucciones del dueño\n• Mantener actualizada tu disponibilidad\n• Tratar con respeto a los dueños y sus mascotas\n• Informar inmediatamente cualquier incidente"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Pagos y Tarifas -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. Pagos y Tarifas"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Los precios son establecidos por cada paseador\n• Walki puede cobrar una comisión por servicio\n• Los pagos se procesan a través de la plataforma\n• Las cancelaciones tardías pueden incurrir en cargos\n• Los reembolsos se manejan caso por caso según nuestra política"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Cancelaciones -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7. Política de Cancelación"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Cancelaciones con más de 24 horas: sin cargo\n• Cancelaciones entre 24-12 horas: 25% del costo\n• Cancelaciones con menos de 12 horas: 50% del costo\n• Cancelaciones por emergencias se evaluarán individualmente"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Limitación de Responsabilidad -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8. Limitación de Responsabilidad"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Walki actúa como intermediario. No somos responsables de:\n• Acciones u omisiones de paseadores o dueños\n• Lesiones a mascotas o personas durante los servicios\n• Pérdida o daño de propiedad\n• Disputas entre usuarios\n\nRecomendamos contratar seguros apropiados."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Conducta Prohibida -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9. Conducta Prohibida"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Está prohibido:\n• Proporcionar información falsa o engañosa\n• Usar la plataforma para actividades ilegales\n• Acosar o amenazar a otros usuarios\n• Evadir pagos o comisiones de la plataforma\n• Compartir información de contacto para evitar la plataforma"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="20dp" />

                    <!-- Modificaciones -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10. Modificaciones"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nos reservamos el derecho de modificar estos términos en cualquier momento. Los cambios entrarán en vigor al publicarse en la aplicación. El uso continuado de la plataforma constituye aceptación de los términos modificados."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Tienes preguntas sobre estos términos?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Envíanos un correo a:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="legal@walki.com"
                        android:textColor="@color/blue_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
