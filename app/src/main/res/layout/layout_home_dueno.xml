<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Moderno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_saludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Hola!"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/tv_nombre_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dueño"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp">
                <ImageView
                    android:id="@+id/iv_perfil_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/cd_profile_picture"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        
        <!-- ACCIONES RÁPIDAS: ¿Qué quieres hacer? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué quieres hacer?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="32dp">

            <!-- Botón 1: Favoritos -->
            <LinearLayout
                android:id="@+id/btn_mis_favoritos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#FFF3E0"
                    android:stateListAnimator="@animator/fab_press_scale"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_filled"
                        android:layout_gravity="center"
                        app:tint="#FF9800"/>
                </com.google.android.material.card.MaterialCardView>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favoritos"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Botón 2: Historial -->
            <LinearLayout
                android:id="@+id/btn_historial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#E3F2FD"
                    android:stateListAnimator="@animator/fab_press_scale"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_description"
                        android:layout_gravity="center"
                        app:tint="#2196F3"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historial"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Botón 3: Mis Mascotas -->
            <LinearLayout
                android:id="@+id/btn_mis_mascotas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#E8F5E9"
                    android:stateListAnimator="@animator/fab_press_scale"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dog"
                        android:layout_gravity="center"
                        app:tint="#4CAF50"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mascotas"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- HERO SECTION: Tarjeta con Gradiente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado Actual"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="12dp"/>

        <!-- Nota: El fondo se cambia dinámicamente, pero ponemos uno por defecto -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_estado_paseo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:stateListAnimator="@animator/fab_press_scale">

                <!-- Layout Container para aplicar el background gradient -->
                <LinearLayout
                    android:id="@+id/header_estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_gradient_blue_card"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#30FFFFFF">
                            <ImageView
                                android:id="@+id/iv_estado_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_search"
                                android:layout_gravity="center"
                                app:tint="@color/white"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_estado_titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin paseos activos"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginStart="16dp"/>
                            
                        <!-- Badge "EN VIVO" (Oculto por defecto) -->
                        <TextView
                            android:id="@+id/badge_live"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EN VIVO"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_badge_pulse"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <!-- CONTENEDOR DE ESTADÍSTICAS EN VIVO (Solo visible en Paseo Activo) -->
                    <LinearLayout
                        android:id="@+id/layout_stats_live"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_live_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textColor="@color/white"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_map"
                                app:tint="#E0E0E0"/>

                            <TextView
                                android:id="@+id/tv_live_distancia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0 km recorridos"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_estado_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Tu mascota quiere salir? Encuentra un paseador cerca de ti."
                        android:textColor="#F0F0F0"
                        android:textSize="15sp"
                        android:layout_marginBottom="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_accion_principal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Buscar Paseador"
                        android:textColor="@color/blue_primary"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="16dp"
                        app:elevation="2dp"
                        app:rippleColor="#2013A4EC"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end"
                        app:iconTint="@color/blue_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Estadísticas del Dueño -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Card: Paseos Solicitados -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                android:stateListAnimator="@animator/fab_press_scale">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:backgroundTint="#E3F2FD">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_walk"
                            android:layout_gravity="center"
                            app:tint="@color/blue_primary"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_paseos_solicitados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paseos"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Mascotas Registradas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                android:stateListAnimator="@animator/fab_press_scale">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:backgroundTint="#E8F5E9">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_dog"
                            android:layout_gravity="center"
                            app:tint="@color/green_success"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_mascotas_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mascotas"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>