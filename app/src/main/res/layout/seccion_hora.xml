<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_titulo_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la hora"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_horarios"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_horario_selector" />

    <LinearLayout
        android:id="@+id/ll_disponibilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_disponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓ Disponible"
            android:textColor="@color/green_success"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tabs_duracion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tab_por_horas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Por horas"
            android:textColor="@color/blue_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/tab_por_mes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Por mes"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_duracion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_duracion_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuántas horas para ese día?"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_duracion_subtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración total del paseo"
            android:textColor="@color/secondary"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_1_hora"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="1 hora"
                android:textSize="12sp"
                android:background="@drawable/selector_duracion_button"
                android:layout_marginEnd="8dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_2_horas"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="2 horas"
                android:textSize="12sp"
                android:background="@drawable/selector_duracion_button"
                android:layout_marginEnd="8dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_3_horas"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="3 horas"
                android:textSize="12sp"
                android:background="@drawable/selector_duracion_button"
                android:layout_marginEnd="8dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_personalizado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Personalizado"
                android:textSize="11sp"
                android:background="@drawable/selector_duracion_button"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_calculo_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarifa: $10.6/hora × 2 horas = $21.2"
            android:textColor="@color/secondary"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
