<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_titulo_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la hora"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_horarios"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_horario_selector" />

    <LinearLayout
        android:id="@+id/ll_disponibilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_status_message"
        android:backgroundTint="@color/green_100"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_disponibilidad_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/green_success"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tv_disponibilidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Genial! Alex está disponible"
            android:textColor="@color/green_700"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tabs_duracion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_rounded"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tab_por_horas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Por horas"
            android:contentDescription="@string/accessibility_reservation_duration_hourly"
            android:textColor="@color/blue_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/tab_por_mes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Por mes"
            android:contentDescription="@string/accessibility_reservation_duration_monthly"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_duracion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_duracion_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuántas horas para ese día?"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_duracion_subtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración total del paseo"
            android:textColor="@color/secondary"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- New ChipGroup for Duration -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_1_hora"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hora"
                    app:chipBackgroundColor="@color/chip_background_selector"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_2_horas"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 horas"
                    app:chipBackgroundColor="@color/chip_background_selector"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_3_horas"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 horas"
                    app:chipBackgroundColor="@color/chip_background_selector"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_personalizado"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personalizado"
                    app:chipBackgroundColor="@color/chip_background_selector"/>

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
        
        <!-- Hidden buttons for backwards compatibility until Java is updated (Logic requires View references) -->
        <!-- Actually, I will remove them and update Java. Keeping them would require View.GONE which Java might check visibility of. -->

        <TextView
            android:id="@+id/tv_calculo_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarifa: $10.6/hora × 2 horas = $21.2"
            android:textColor="@color/secondary"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>