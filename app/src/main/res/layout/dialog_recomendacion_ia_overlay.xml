<?xml version="1.0" encoding="utf-8"?>
<!--
    Dialog Overlay para Recomendaci칩n IA
    Wrapper simple que muestra item_paseador_recomendacion_ia.xml centrado
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <!-- Card contenedor centrada - Ancho completo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="24dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ScrollView para el contenido -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="600dp"
                android:scrollbars="none"
                android:paddingTop="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- ESTADO: LOADING (Skeleton con mensaje de progreso) -->
                    <LinearLayout
                        android:id="@+id/layoutSkeleton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Mensaje de progreso mejorado con icono Material -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp"
                            android:background="#F8FAFC">

                            <!-- Icono animado del paso actual (Material Icon) -->
                            <ImageView
                                android:id="@+id/ivLoadingIcon"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_location_on"
                                android:tint="#6366F1"
                                android:layout_marginBottom="16dp"
                                android:contentDescription="Icono de progreso" />

                            <!-- Mensaje de progreso -->
                            <TextView
                                android:id="@+id/tvLoadingMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Obteniendo tu ubicaci칩n..."
                                android:textSize="16sp"
                                android:textColor="#1E293B"
                                android:fontFamily="sans-serif-medium"
                                android:textAlignment="center"
                                android:gravity="center" />

                            <!-- Submensaje opcional -->
                            <TextView
                                android:id="@+id/tvLoadingSubtext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Esto tomar치 solo unos segundos"
                                android:textSize="13sp"
                                android:textColor="#64748B"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_marginTop="6dp" />

                        </LinearLayout>

                        <!-- Skeleton -->
                        <include
                            layout="@layout/item_paseador_recomendacion_ia_skeleton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!-- Bot칩n Cancelar -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Cancelar"
                            android:layout_margin="16dp"
                            style="@style/Widget.Material3.Button.TextButton"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <!-- ESTADO: CONTENT (ViewPager2 para m칰ltiples recomendaciones) -->
                    <LinearLayout
                        android:id="@+id/layoutContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- ViewPager2 para swipear entre recomendaciones -->
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerRecommendations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!-- Indicador de p치ginas (dots) -->
                        <LinearLayout
                            android:id="@+id/layoutPageIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="16dp"
                            android:visibility="gone">
                            <!-- Los dots se crear치n din치micamente en el c칩digo -->
                        </LinearLayout>

                    </LinearLayout>

                    <!-- 游 ESTADO: ERROR -->
                    <LinearLayout
                        android:id="@+id/layoutError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="48dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游땞"
                            android:textSize="64sp" />

                        <TextView
                            android:id="@+id/tvErrorMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No encontramos un match perfecto"
                            android:textSize="16sp"
                            android:textColor="#475569"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginTop="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRetry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reintentar"
                            android:layout_marginTop="24dp"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </FrameLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
