<?xml version="1.0" encoding="utf-8"?>
<!--
    Dialog Overlay para RecomendaciÃ³n IA
    Wrapper simple que muestra item_paseador_recomendacion_ia.xml centrado
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <!-- Card contenedor centrada - Ancho completo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="24dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BotÃ³n cerrar en la esquina superior derecha -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#64748B"
                    android:contentDescription="Cerrar" />
            </FrameLayout>

            <!-- ScrollView para el contenido -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="600dp"
                android:scrollbars="none"
                android:paddingTop="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- ðŸ†• ESTADO: LOADING (Skeleton) -->
                    <include
                        android:id="@+id/layoutSkeleton"
                        layout="@layout/item_paseador_recomendacion_ia_skeleton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                    <!-- ðŸ†• ESTADO: CONTENT (Item real) -->
                    <include
                        android:id="@+id/layoutContent"
                        layout="@layout/item_paseador_recomendacion_ia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <!-- ðŸ†• ESTADO: ERROR -->
                    <LinearLayout
                        android:id="@+id/layoutError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="48dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜”"
                            android:textSize="64sp" />

                        <TextView
                            android:id="@+id/tvErrorMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No encontramos un match perfecto"
                            android:textSize="16sp"
                            android:textColor="#475569"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginTop="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRetry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reintentar"
                            android:layout_marginTop="24dp"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </FrameLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
