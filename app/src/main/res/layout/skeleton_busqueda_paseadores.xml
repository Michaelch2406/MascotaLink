<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <!-- Skeleton: Barra de Búsqueda -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- Icono de flecha atrás -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_skeleton_circle"/>

            <!-- Campo de búsqueda -->
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_skeleton_rounded"/>

            <!-- Icono de configuración -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_skeleton_circle"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Skeleton: Chips de Filtros -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Chip 1 -->
            <View
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_skeleton_rounded"/>

            <!-- Chip 2 -->
            <View
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_skeleton_rounded"/>

            <!-- Chip 3 -->
            <View
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_skeleton_rounded"/>

            <!-- Chip 4 -->
            <View
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_skeleton_rounded"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Contenido scrolleable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Skeleton: Botón Buscar con IA -->
            <View
                android:id="@+id/skeleton_btn_ia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_skeleton_rounded"/>

        <!-- Skeleton: Título "Populares" -->
        <View
            android:id="@+id/skeleton_titulo_populares"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_skeleton_rounded"/>

        <!-- Skeleton: RecyclerView Horizontal de Populares -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/skeleton_recycler_populares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:clipToPadding="false"
            android:orientation="horizontal"/>

        <!-- Skeleton: Título "Cerca de ti" -->
        <View
            android:id="@+id/skeleton_titulo_cerca"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_skeleton_rounded"/>

        <!-- Skeleton: Mapa -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <View
                android:id="@+id/skeleton_mapa"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_skeleton_rounded"/>
        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
