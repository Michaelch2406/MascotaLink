<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Contenido principal -->
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:orientation="vertical">

            <!-- Fecha -->
            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 de mayo"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <!-- Nombre Paseador -->
            <TextView
                android:id="@+id/tv_paseador_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elena Ramirez"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Mascota y Hora -->
            <TextView
                android:id="@+id/tv_mascota_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mascota: Max, 10:00 AM"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginBottom="12dp" />

            <!-- Row 2: DuraciÃ³n + Costo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <!-- DuraciÃ³n -->
                <TextView
                    android:id="@+id/tvDuracion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DuraciÃ³n: 2 horas"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <!-- Costo -->
                <TextView
                    android:id="@+id/tvCosto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$21.20"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Row 3: Tipo + Estado Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:gravity="center_vertical">

                <!-- Tipo de Reserva -->
                <TextView
                    android:id="@+id/tvTipoReserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[PUNTUAL]"
                    android:textSize="11sp"
                    android:textColor="#12A3ED"
                    android:background="@drawable/badge_tipo"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <!-- Estado Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="CONFIRMADO"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Row 4: Botones de AcciÃ³n (se mostrarÃ¡n/ocultarÃ¡n segÃºn estado) -->
            <LinearLayout
                android:id="@+id/layoutBotonesAccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:gravity="center_vertical">

                <!-- BotÃ³n 1: DinÃ¡mico -->
                <Button
                    android:id="@+id/btnAccion1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Ver UbicaciÃ³n"
                    android:textSize="11sp"
                    android:layout_marginEnd="6dp"
                    android:backgroundTint="#12A3ED" />

                <!-- BotÃ³n 2: DinÃ¡mico -->
                <Button
                    android:id="@+id/btnAccion2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Contactar"
                    android:textSize="11sp"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="#12A3ED" />
            </LinearLayout>

            <!-- Botones de acciÃ³n -->
            <LinearLayout
                android:id="@+id/ll_botones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btn_ver_ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver UbicaciÃ³n ðŸ“"
                    android:textColor="#12A3ED"
                    android:textSize="14sp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_contactar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contactar Paseador"
                    android:textColor="#12A3ED"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_calificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calificar Paseador â­"
                    android:textColor="#12A3ED"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_ver_motivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver motivo â„¹ï¸"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Imagen del paseador -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_paseador_foto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_person"
            app:civ_border_width="2dp"
            app:civ_border_color="#E5E7EB" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
