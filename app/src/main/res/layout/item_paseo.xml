<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_paseo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:rippleColor="#2013A4EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Fecha y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/gray_dark"/>
                    
                <TextView
                    android:id="@+id/tv_fecha_paseo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="24 Oct, 2023" />
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_estado_paseo"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:clickable="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/green_success"
                app:chipMinHeight="28dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                tools:text="COMPLETADO" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="16dp"/>

        <!-- Cuerpo: Detalles del Paseo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Foto Mascota/Perfil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_foto_perfil_paseo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                tools:src="@drawable/ic_pet_placeholder" />

            <!-- Info Central -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Max" />

                <TextView
                    android:id="@+id/tv_nombre_secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="Paseador: Ana" />
                    
                <!-- Detalles Pills -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    
                    <!-- Duraci칩n -->
                    <LinearLayout
                        android:id="@+id/container_duracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_12"
                        android:backgroundTint="#E3F2FD"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_access_time"
                            app:tint="@color/blue_primary"/>
                        <TextView
                            android:id="@+id/tv_duracion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"
                            tools:text="60 min"/>
                    </LinearLayout>

                    <!-- Costo -->
                    <LinearLayout
                        android:id="@+id/container_costo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_12"
                        android:backgroundTint="#E8F5E9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_attach_money"
                            app:tint="#4CAF50"/>
                        <TextView
                            android:id="@+id/tv_costo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:layout_marginStart="2dp"
                            tools:text="$10.00"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Actions Footer (Botones Din치micos) -->
        <LinearLayout
            android:id="@+id/layout_botones_accion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accion_1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Acci칩n 1"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/blue_primary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accion_2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Acci칩n 2"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                app:strokeColor="@color/blue_primary"
                android:textColor="@color/blue_primary"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>