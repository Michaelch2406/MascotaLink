<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header: Date, Time & Price -->
        <LinearLayout
            android:id="@+id/ll_fecha_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_fecha_paseo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28 Nov"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_circle_soft"
                android:backgroundTint="@color/text_secondary"/>

            <TextView
                android:id="@+id/tv_hora_inicio_paseo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                tools:text="10:00 AM"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_costo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$15.00"
            android:textColor="@color/blue_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider_top"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_fecha_hora" />

        <!-- Content: Avatar & Info -->
        <!-- FrameLayout contenedor para ambos tipos de avatar -->
        <FrameLayout
            android:id="@+id/avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:minWidth="56dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_top">

            <!-- Single avatar (for paseador or single pet) -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_foto_perfil_paseo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <!-- Overlapping avatars (for multiple pets) -->
            <com.mjc.mascotalink.views.OverlappingAvatarsView
                android:id="@+id/overlapping_avatars"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_nombre_principal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Nombre Principal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/chip_estado_paseo"
            app:layout_constraintStart_toEndOf="@+id/avatar_container"
            app:layout_constraintTop_toTopOf="@+id/avatar_container" />

        <TextView
            android:id="@+id/tv_nombre_secundario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Rol: Nombre Secundario"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/ll_duracion_info"
            app:layout_constraintStart_toStartOf="@+id/tv_nombre_principal"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_principal" />

        <!-- Status Chip (Styled as Bubble) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_estado_paseo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN CURSO"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/green_500"
            app:chipCornerRadius="8dp"
            app:chipMinHeight="24dp"
            app:ensureMinTouchTargetSize="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_foto_perfil_paseo" />

        <!-- Info contextual del estado -->
        <TextView
            android:id="@+id/tv_info_estado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="Comienza en 2 horas"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_nombre_secundario"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_secundario" />

        <!-- Duration Info - Alineado al bottom del contenedor de avatar -->
        <LinearLayout
            android:id="@+id/ll_duracion_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_container">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_access_time"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="30 min"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Barrier para asegurar que los botones estén debajo de todo el contenido -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_content_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="avatar_container,tv_info_estado,ll_duracion_info" />

        <!-- Actions Area -->
        <LinearLayout
            android:id="@+id/layout_botones_accion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_content_bottom">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accion_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Acción 1"
                android:textSize="12sp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accion_2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="Acción 2"
                android:textSize="12sp"
                app:cornerRadius="12dp"
                app:strokeColor="@color/gray_disabled" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
