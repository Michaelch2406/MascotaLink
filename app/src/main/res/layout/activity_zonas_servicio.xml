<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7FAFC"
    tools:context=".ZonasServicioActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#111827"
        app:title="Zonas de Servicio"
        app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"
        app:titleTextColor="#111827" />

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Instrucciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona las zonas donde ofreces tu servicio de paseo de mascotas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="16dp" />

            <!-- Buscador de direcciones -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background">
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/autocomplete_fragment_zonas"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <!-- Control de radio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radio de servicio"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radio: 2.0 km"
                android:textSize="16sp"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0.5"
                android:valueTo="5.0"
                android:stepSize="0.5"
                android:value="2.0"
                app:thumbColor="@color/blue_primary"
                app:trackColorActive="@color/blue_primary"
                app:trackColorInactive="@color/gray_light"
                android:layout_marginBottom="16dp" />

            <!-- Botón para agregar zona -->
            <Button
                android:id="@+id/btn_agregar_zona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Zona Seleccionada"
                android:enabled="false"
                android:backgroundTint="@color/green_accent"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Mapa -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/iv_my_location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_my_location"
                    android:background="@drawable/bg_icon_container"
                    android:padding="8dp"
                    android:elevation="5dp"
                    app:tint="@color/blue_primary"
                    android:contentDescription="Mi ubicación" />

            </RelativeLayout>

            <!-- Instrucciones para el mapa -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Toca el mapa para seleccionar una ubicación\n• Ajusta el radio de servicio con el deslizador\n• Toca 'Agregar Zona' para confirmar\n• Toca una zona existente (verde) para eliminarla"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp" />

            <!-- Mensajes de validación -->
            <TextView
                android:id="@+id/tv_validation_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_error"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Botón guardar -->
            <Button
                android:id="@+id/btn_guardar_zonas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Zonas de Servicio"
                android:enabled="false"
                android:backgroundTint="@color/blue_primary"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:minHeight="48dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>