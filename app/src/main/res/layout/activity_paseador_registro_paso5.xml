<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:navigationIconTint="#111827"
        app:title="Configura tu perfil de paseador"
        app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/bottom_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Método de pago -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">
                <TextView
                    style="@style/TextAppearance.Mascota.CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Método de Pago"/>
                <ImageView
                    android:id="@+id/iv_pago_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/abc_btn_check_to_on_mtrl_015"
                    app:tint="@color/colorSuccess"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Selecciona un método de pago para completar tus transacciones de forma segura."/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_metodo_pago"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Ingresar Cuenta Bancaria"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#CBD5E1"
                app:strokeWidth="1dp"/>

            <!-- Video de presentación -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Video de presentación"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Graba un video corto (30–60 segundos) para que los dueños te conozcan mejor."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subir_video"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subir video"
                    app:icon="@android:drawable/ic_menu_upload" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_grabar_video"
                    style="@style/Widget.Mascota.PrimaryPillButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grabar video"
                    app:icon="@android:drawable/ic_menu_camera" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/video_preview_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/video_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="@android:color/white"/>

                <Button
                    android:id="@+id/btn_eliminar_video"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:text="❌ Eliminar"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#DC2626"
                    android:textColor="#FFFFFF"/>

            </FrameLayout>

            <!-- Zona de servicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/TextAppearance.Mascota.CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zona de servicio"/>
                <ImageView
                    android:id="@+id/iv_zonas_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_success"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Define las áreas donde ofreces tus servicios de paseo."/>
            <LinearLayout
                android:id="@+id/row_zonas_servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Configurar Zonas"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <!-- Disponibilidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/TextAppearance.Mascota.CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponibilidad"/>
                <ImageView
                    android:id="@+id/iv_disponibilidad_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_success"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Indica los días y horas en que estás disponible para pasear."/>
            <LinearLayout
                android:id="@+id/row_disponibilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Horario"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float"/>
            </LinearLayout>

            <!-- Tipos de perros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/TextAppearance.Mascota.CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipos de perros"/>
                <ImageView
                    android:id="@+id/iv_perros_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_success"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Especifica los tamaños y temperamentos de perros que puedes manejar."/>
            <LinearLayout
                android:id="@+id/row_tipos_perros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tamaño y temperamento"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float"/>
            </LinearLayout>

            <!-- Precio por hora -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Precio por hora"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Establece la tarifa que cobrarás por cada hora de paseo."/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_precio_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_precio_hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 10.50"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/edit_text_background"/>
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_validation_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/colorError"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_guardar_continuar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Finalizar Registro"
            style="@style/Widget.Mascota.PrimaryButton"/>
    </LinearLayout>

</RelativeLayout>
