<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:navigationIconTint="#111827"
        app:title="Configura tu perfil de paseador"
        app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/bottom_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Método de pago -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_marginTop="12dp"
                android:text="Método de Pago"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_marginTop="6dp"
                android:text="Selecciona un método de pago para completar tus transacciones de forma segura."/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_metodo_pago"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Ingresar Cuenta Bancaria"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#CBD5E1"
                app:strokeWidth="1dp"/>

            <!-- Video de presentación -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_marginTop="20dp"
                android:text="Video de presentación"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_marginTop="6dp"
                android:text="Graba un video corto (30–60 segundos) para que los dueños te conozcan mejor."/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_grabar_video"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Grabar video"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconTint="#111827"
                app:strokeColor="#CBD5E1"
                app:strokeWidth="1dp"/>

            <!-- Zona de servicio -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_marginTop="20dp"
                android:text="Zona de servicio"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_marginTop="6dp"
                android:text="Define el área donde ofreces tus servicios de paseo."/>
            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:background="#E7EEF2"/>

            <!-- Disponibilidad -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_marginTop="20dp"
                android:text="Disponibilidad"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_marginTop="6dp"
                android:text="Indica los días y horas en que estás disponible para pasear."/>
            <LinearLayout
                android:id="@+id/row_disponibilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Horario"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float"/>
            </LinearLayout>

            <!-- Tipos de perros -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_marginTop="20dp"
                android:text="Tipos de perros"/>
            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_marginTop="6dp"
                android:text="Especifica los tamaños y temperamentos de perros que puedes manejar."/>
            <LinearLayout
                android:id="@+id/row_tipos_perros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tamaño y temperamento"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_guardar_continuar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Guardar y continuar"
            style="@style/Widget.Mascota.PrimaryButton"/>
    </LinearLayout>

</RelativeLayout>
