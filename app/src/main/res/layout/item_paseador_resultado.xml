<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar del Paseador -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/paseador_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/selfie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del Paseador -->
        <TextView
            android:id="@+id/paseador_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/paseador_avatar"
            app:layout_constraintTop_toTopOf="@id/paseador_avatar"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            tools:text="Alejandro Martinez" />

        <!-- Zona de Servicio -->
        <TextView
            android:id="@+id/paseador_zona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_my_location" 
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            app:drawableTint="#888888"
            app:layout_constraintStart_toStartOf="@id/paseador_nombre"
            app:layout_constraintTop_toBottomOf="@id/paseador_nombre"
            tools:text="Quito Centro, La Carolina" />

        <!-- Guía para separar la sección derecha -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="90dp" />

        <!-- Calificación -->
        <LinearLayout
            android:id="@+id/paseador_calificacion_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_corazon"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/paseador_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                tools:text="4.9" />
        </LinearLayout>

        <!-- Tarifa -->
        <TextView
            android:id="@+id/paseador_tarifa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_outline_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paseador_calificacion_layout"
            tools:text="$8.50/hora" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>