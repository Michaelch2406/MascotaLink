<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_round_12"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Sección Izquierda: Avatar y Estado -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp">
        
        <ImageView
            android:id="@+id/iv_avatar_paseador"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_avatar_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/paseador_mascota"/>

        <!-- Indicador de disponibilidad -->
        <View
            android:id="@+id/view_disponibilidad"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="@color/green_success"/>
    </FrameLayout>

    <!-- Sección Central: Información del Paseador -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <!-- Nombre completo -->
        <TextView
            android:id="@+id/tv_nombre_paseador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carlos Mendoza"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"/>

        <!-- Zona de servicio -->
        <TextView
            android:id="@+id/tv_zona_servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Zona: Quito Centro, La Carolina"
            android:textSize="12sp"
            android:textColor="#6B7280"/>

        <!-- Experiencia -->
        <TextView
            android:id="@+id/tv_experiencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="3 años de experiencia"
            android:textSize="12sp"
            android:textColor="#6B7280"/>
    </LinearLayout>

    <!-- Sección Derecha: Calificación y Precio -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Calificación -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★"
                android:textSize="14sp"
                android:textColor="#FFC107"/>

            <TextView
                android:id="@+id/tv_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.8"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"/>
        </LinearLayout>

        <!-- Número de reseñas -->
        <TextView
            android:id="@+id/tv_numero_resenas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(123)"
            android:textSize="12sp"
            android:textColor="#6B7280"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/tv_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$15/hora"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green_success"/>

        <!-- Chip de disponibilidad -->
        <TextView
            android:id="@+id/chip_disponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Disponible"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_round_12"
            android:backgroundTint="@color/green_success"/>
    </LinearLayout>

</LinearLayout>
