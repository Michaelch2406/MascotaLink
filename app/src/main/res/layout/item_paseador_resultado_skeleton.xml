<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <View
            android:id="@+id/skeleton_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_avatar_circle_skeleton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/skeleton_nombre"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:background="@color/skeleton_color"
            app:layout_constraintStart_toEndOf="@id/skeleton_avatar"
            app:layout_constraintTop_toTopOf="@id/skeleton_avatar"/>

        <View
            android:id="@+id/skeleton_zona"
            android:layout_width="90dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:background="@color/skeleton_color"
            app:layout_constraintStart_toEndOf="@id/skeleton_avatar"
            app:layout_constraintTop_toBottomOf="@id/skeleton_nombre"/>

        <View
            android:id="@+id/skeleton_rating"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:background="@color/skeleton_color"
            app:layout_constraintStart_toEndOf="@id/skeleton_avatar"
            app:layout_constraintTop_toBottomOf="@id/skeleton_zona"/>

        <View
            android:id="@+id/skeleton_precio"
            android:layout_width="70dp"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            android:background="@color/skeleton_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/skeleton_avatar"/>

        <View
            android:id="@+id/skeleton_experiencia"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/skeleton_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeleton_avatar"/>

        <View
            android:id="@+id/skeleton_servicios"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/skeleton_color"
            app:layout_constraintStart_toEndOf="@id/skeleton_experiencia"
            app:layout_constraintTop_toBottomOf="@id/skeleton_avatar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>