<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <!-- Contenido Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F9FAFB">

    <!-- Custom Toolbar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black"
                android:contentDescription="AtrÃ¡s" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_user_placeholder"
                app:civ_border_width="1dp"
                app:civ_border_color="#E5E7EB" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_estado_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desconectado"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Chat Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mensajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:scrollbars="vertical" />

        <ProgressBar
            android:id="@+id/progress_load_more"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
            
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_scroll_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_arrow_down"
            app:fabSize="mini"
            app:backgroundTint="@color/white"
            app:tint="@color/blue_primary"
            android:visibility="gone"/>

    </FrameLayout>
    
    <!-- Quick Replies (Solo visible si es paseador) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quick_replies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="#F3F4F6"/>

    <!-- Input Area -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_adjuntos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_attach"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_secondary"
                android:layout_marginBottom="4dp"
                android:contentDescription="Adjuntar archivo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_input_rounded"
                android:minHeight="48dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_mensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Escribe un mensaje..."
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary" />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_arrow_forward"
                app:fabSize="mini"
                app:elevation="0dp"
                app:backgroundTint="@color/blue_primary"
                app:tint="@color/white"
                android:contentDescription="Enviar" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <!-- Fin Contenido Principal -->

    <!-- Skeleton Loading - Cubre toda la pantalla -->
    <FrameLayout
        android:id="@+id/skeleton_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:elevation="16dp">

        <include layout="@layout/skeleton_chat"/>

    </FrameLayout>

</FrameLayout>