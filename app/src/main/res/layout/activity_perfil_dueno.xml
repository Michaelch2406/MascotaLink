<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC"
    tools:context=".PerfilDuenoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FAFC"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Atrás"
                    app:tint="@color/gray_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Perfil"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_edit_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Editar Perfil"
                    app:tint="@color/blue_primary" />

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_above="@id/bottom_nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FAFC"
        app:itemActiveIndicatorStyle="@null"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_above="@id/bottom_nav">

        <include
            android:id="@+id/skeleton_layout"
            layout="@layout/skeleton_perfil_dueno"
            android:visibility="visible" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="#FFB08A"
                app:strokeWidth="4dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_nombre_completo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isabella Rodriguez"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/iv_verificado"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:tint="@color/blue_primary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dueña de mascotas"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:layout_marginTop="24dp"
                android:text="Correo electrónico"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/et_email_dueno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:enabled="false"/>
                <ImageView
                    android:id="@+id/iv_edit_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@color/blue_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Editar correo electrónico"/>
                <ImageView
                    android:id="@+id/iv_save_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_success"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:contentDescription="Guardar correo electrónico"/>
            </LinearLayout>

            <!-- Teléfono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:layout_marginTop="12dp"
                android:text="Número de teléfono"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/et_telefono_dueno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Número de teléfono"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:enabled="false"/>
                <ImageView
                    android:id="@+id/iv_edit_telefono"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@color/blue_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Editar número de teléfono"/>
                <ImageView
                    android:id="@+id/iv_save_telefono"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_success"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:contentDescription="Guardar número de teléfono"/>
            </LinearLayout>

            <!-- Mis Mascotas -->
            <LinearLayout
                android:id="@+id/seccion_mascotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mis mascotas"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_edit_mascotas"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@color/blue_primary" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_mascotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:listitem="@layout/item_mascota_perfil"
                    tools:itemCount="1"/>
            </LinearLayout>

            <!-- Historial de paseos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de paseos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="32dp"/>

            <LinearLayout
                android:id="@+id/ll_historial_paseos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <!-- Items de historial se agregarán aquí -->
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Próximamente..."
                    android:textColor="#6B7280"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- Ajustes y Cuenta -->
            <LinearLayout
                android:id="@+id/seccion_ajustes_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Mascota.Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Ajustes y Cuenta"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/btn_favoritos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#E7EEF2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Mis Paseadores Favoritos"
                        android:textColor="#111827" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_corazon"
                        app:tint="#9CA3AF" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_notificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#E7EEF2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Configurar notificaciones"
                        android:textColor="#111827" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_metodos_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#E7EEF2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Métodos de pago"
                        android:textColor="#111827" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_privacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#E7EEF2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Preferencias de privacidad"
                        android:textColor="#111827" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Soporte y Legal -->
            <LinearLayout
                android:id="@+id/seccion_soporte_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.Mascota.Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Soporte y Legal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/btn_centro_ayuda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#E7EEF2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Centro de ayuda"
                        android:textColor="#111827" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_terminos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#E7EEF2"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Términos y condiciones"
                        android:textColor="#111827" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Cerrar Sesión -->
            <Button
                android:id="@+id/btn_cerrar_sesion"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Cerrar sesión"
                android:textColor="@color/colorError" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </FrameLayout>

</RelativeLayout>
