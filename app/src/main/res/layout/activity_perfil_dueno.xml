<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PerfilDuenoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MascotaLink">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Perfil"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_mensaje"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/ic_messages"
                    android:visibility="gone"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/iv_edit_perfil"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/btn_mensaje"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@drawable/ic_settings"
                    android:visibility="gone"
                    app:tint="@color/black" />

            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Skeleton Loading View -->
    <LinearLayout
        android:id="@+id/skeleton_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_avatar_circle_skeleton" />

        <View
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/skeleton_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_round_12"
            android:backgroundTint="@color/skeleton_color_light" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Header Perfil -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_user_placeholder"
                    app:civ_border_color="@color/gray_light"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/iv_avatar"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_nombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Cargando..."
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_rol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dueño de Mascotas"
                        android:textColor="@color/gray_dark" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_verificado_badge"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_check_circle"
                            android:visibility="gone"
                            app:tint="@color/blue_primary" />

                        <TextView
                            android:id="@+id/tv_verificado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Verificado"
                            android:textColor="@color/blue_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/badge_perfil_en_linea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="En línea"
                            android:textColor="@color/green_success"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_badge_online"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Stats Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="8dp"
                android:rowCount="2">

                <!-- Mascotas Registradas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_round_12"
                    android:backgroundTint="#F3F4F6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dog"
                        app:tint="@color/blue_primary" />

                    <TextView
                        android:id="@+id/tv_mascotas_registradas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0 Mascotas"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Paseos Solicitados -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_round_12"
                    android:backgroundTint="#F3F4F6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_walk"
                        app:tint="@color/green_success" />

                    <TextView
                        android:id="@+id/tv_paseos_solicitados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0 Paseos"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Miembro Desde -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_round_12"
                    android:backgroundTint="#F3F4F6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#F59E0B" />

                    <TextView
                        android:id="@+id/tv_miembro_desde_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Desde 2023"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Calificación -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_round_12"
                    android:backgroundTint="#F3F4F6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tv_rating_valor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#F59E0B"
                        android:rating="0" />

                    <TextView
                        android:id="@+id/tv_resenas_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="0 reviews"
                        android:textAlignment="center"
                        android:textColor="@color/gray_dark"
                        android:textSize="11sp" />
                </LinearLayout>

            </GridLayout>

            <!-- Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@android:color/transparent"
                app:tabIndicator="@drawable/tab_indicator_rounded"
                app:tabIndicatorColor="@color/blue_primary"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="4dp"
                app:tabMode="fixed"
                app:tabRippleColor="#1A2196F3"
                app:tabSelectedTextColor="@color/blue_primary"
                app:tabTextColor="@color/gray_dark"
                app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- Contenido Tabs -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Tab: Acerca de -->
                <LinearLayout
                    android:id="@+id/ll_acerca_de"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="visible">

                    <!-- Mis Mascotas Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                         <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mis Mascotas"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                         
                         <Button
                             android:id="@+id/btn_ver_todas_mascotas"
                             style="@style/Widget.Material3.Button.TextButton"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Ver todas"
                             android:textColor="@color/blue_primary"
                             android:visibility="gone"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_mascotas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal" />
                    
                    <!-- Información de contacto -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Información de contacto"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_messages"
                                app:tint="@color/gray_dark" />

                            <TextView
                                android:id="@+id/tv_email_dueno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="email@ejemplo.com"
                                android:textColor="@color/gray_dark" />
                                
                            <ImageView
                                android:id="@+id/btn_copy_email"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp"
                                android:src="@drawable/ic_content_copy"
                                app:tint="@color/blue_primary" />
                        </LinearLayout>

                         <!-- Telefono -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_phone"
                                app:tint="@color/gray_dark" />

                            <TextView
                                android:id="@+id/tv_telefono_dueno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="+593 99 999 9999"
                                android:textColor="@color/gray_dark" />
                                
                            <ImageView
                                android:id="@+id/btn_copy_telefono"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp"
                                android:src="@drawable/ic_content_copy"
                                app:tint="@color/blue_primary" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Secciones de Ajustes (Solo visibles para el dueño del perfil) -->
                    <LinearLayout
                        android:id="@+id/ajustes_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajustes y Cuenta"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        
                        <TextView
                            android:id="@+id/btn_mis_paseos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="12dp"
                            android:paddingVertical="12dp"
                            android:text="Historial de paseos"
                            android:textColor="@color/gray_dark"
                            app:drawableStartCompat="@drawable/ic_walk"
                            app:drawableTint="@color/gray_dark" />

                        <TextView
                            android:id="@+id/btn_favoritos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="12dp"
                            android:paddingVertical="12dp"
                            android:text="Mis Paseadores Favoritos"
                            android:textColor="@color/gray_dark"
                            app:drawableStartCompat="@drawable/ic_corazon_small"
                            app:drawableTint="@color/gray_dark" />

                        <LinearLayout
                            android:id="@+id/btn_notificaciones"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="12dp"
                                android:text="Notificaciones"
                                android:textColor="@color/gray_dark"
                                app:drawableStartCompat="@drawable/ic_notifications"
                                app:drawableTint="@color/gray_dark" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_notificaciones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_metodos_pago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="12dp"
                            android:paddingVertical="12dp"
                            android:text="Métodos de Pago"
                            android:textColor="@color/gray_dark"
                            app:drawableStartCompat="@drawable/ic_payment"
                            app:drawableTint="@color/gray_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/soporte_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soporte y Legal"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btn_privacidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="12dp"
                            android:paddingVertical="12dp"
                            android:text="Política de Privacidad"
                            android:textColor="@color/gray_dark"
                            app:drawableStartCompat="@drawable/ic_privacy"
                            app:drawableTint="@color/gray_dark" />

                        <TextView
                            android:id="@+id/btn_centro_ayuda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="12dp"
                            android:paddingVertical="12dp"
                            android:text="Centro de Ayuda"
                            android:textColor="@color/gray_dark"
                            app:drawableStartCompat="@drawable/ic_help"
                            app:drawableTint="@color/gray_dark" />

                        <TextView
                            android:id="@+id/btn_terminos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:drawablePadding="12dp"
                            android:paddingVertical="12dp"
                            android:text="Términos y Condiciones"
                            android:textColor="@color/gray_dark"
                            app:drawableStartCompat="@drawable/ic_description"
                            app:drawableTint="@color/gray_dark" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_cerrar_sesion"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Cerrar Sesión"
                        android:textColor="@color/red_error"
                        android:visibility="gone"
                        app:strokeColor="@color/red_error" />

                </LinearLayout>

                <!-- Tab: Reseñas -->
                <LinearLayout
                    android:id="@+id/ll_resenas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <!-- Estado Vacío (Sin reseñas) -->
                    <LinearLayout
                        android:id="@+id/ll_empty_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_empty_reviews"
                            app:tint="#9CA3AF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Aún no hay reseñas"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Las calificaciones de los paseadores aparecerán aquí."
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_resenas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <Button
                        android:id="@+id/btn_ver_mas_resenas"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ver más reseñas"
                        android:textColor="@color/blue_primary"
                        android:visibility="gone" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemActiveIndicatorStyle="@null" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
