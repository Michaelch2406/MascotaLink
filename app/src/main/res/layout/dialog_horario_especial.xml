<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horario_especial_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_dark"
        android:layout_marginBottom="16dp"/>

    <!-- Fecha seleccionada -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horario_especial_fecha"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvFechaSeleccionada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sábado 30 de Noviembre de 2025"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blue_primary"
        android:background="?attr/selectableItemBackground"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="24dp"/>

    <!-- Horario personalizado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horario personalizado"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp"/>

    <!-- Hora de inicio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/horario_default_hora_inicio"
            android:textSize="16sp"
            android:textColor="@color/gray_dark"/>

        <TextView
            android:id="@+id/tvHoraInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Hora de fin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/horario_default_hora_fin"
            android:textSize="16sp"
            android:textColor="@color/gray_dark"/>

        <TextView
            android:id="@+id/tvHoraFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Nota opcional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horario_especial_nota"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/horario_especial_nota_hint"
        android:inputType="text"
        android:maxLines="2"
        android:layout_marginBottom="16dp"/>

    <!-- Checkbox para solo este día -->
    <CheckBox
        android:id="@+id/cbSoloEsteDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horario_especial_solo_este_dia"
        android:buttonTint="@color/checkbox_blue"
        android:layout_marginBottom="24dp"/>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disponibilidad_cancelar"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario_especial_guardar"
            android:backgroundTint="@color/blue_primary"/>
    </LinearLayout>

</LinearLayout>
