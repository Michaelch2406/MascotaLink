<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFC"
    tools:context=".PaseoEnCursoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/gray_text"
            app:title="@string/paseo_en_curso_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"
            app:titleTextColor="@android:color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="240dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECCIÓN 1: INFORMACIÓN DE LA MASCOTA (Estilo item_solicitud) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_mascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:rippleColor="#2013A4EC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Fila Superior: Info Principal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Foto Mascota -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_foto_mascota"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                            tools:src="@drawable/ic_pet_placeholder" />

                        <!-- Datos Mascota -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_nombre_mascota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="Max" />

                            <TextView
                                android:id="@+id/tv_paseador"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/secondary"
                                android:textSize="14sp"
                                tools:text="De: Juan Pérez" />
                        </LinearLayout>

                        <!-- Label Info -->
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:clickable="false"
                            android:text="Mascota"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            app:chipBackgroundColor="@color/green_success"
                            app:chipMinHeight="32dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#F0F0F0" />

                    <!-- Fila Inferior: Fecha y Hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/secondary" />

                            <TextView
                                android:id="@+id/tv_fecha_hora"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp"
                                tools:text="12 de mayo, 10:00 AM" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_ubicacion_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_status_chip"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_my_location"
                app:drawableTint="#9CA3AF"
                android:gravity="center_vertical"
                android:text="Ubicación: obteniendo señal..."
                android:textSize="13sp"
                android:textColor="#4B5563"
                tools:text="Ubicación: Hace 5s (±10m)" />

            <!-- vibe-fix: bg_estado_progreso.xml es un recurso crítico para el look&feel de esta pantalla.
                 Define el fondo verde claro (#E8F5E9) con esquinas redondeadas (8dp) para el indicador
                 de estado "EN PROGRESO". NO ELIMINAR este drawable sin actualizar este layout primero.
                 Ubicación: app/src/main/res/drawable/bg_estado_progreso.xml -->
            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_estado_progreso"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/paseo_en_curso_state_en_progreso"
                android:textColor="@color/color_en_curso"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_horas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Mascota.BodyMuted"
                        android:text="@string/paseo_en_curso_label_horas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_minutos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Mascota.BodyMuted"
                        android:text="@string/paseo_en_curso_label_minutos" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_segundos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Mascota.BodyMuted"
                        android:text="@string/paseo_en_curso_label_segundos" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notas_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                style="@style/TextAppearance.Mascota.Label"
                android:text="@string/paseo_en_curso_section_notas" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_notas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:hintTextColor="#BDBDBD">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notas"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:hint="@string/paseo_en_curso_hint_notas"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    tools:text="Max se comporta excelente durante el recorrido." />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_adjuntar_fotos"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/paseo_en_curso_button_adjuntar"
                android:textColor="@color/blue_primary"
                android:textSize="13sp"
                app:icon="@drawable/ic_camera_outline"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/blue_primary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:listitem="@layout/item_foto_paseo"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB Marcar Completado (Arriba - Posición 1) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_finalizar_paseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="240dp"
        android:src="@drawable/ic_check_single"
        app:backgroundTint="#4CAF50"
        app:tint="@android:color/white"
        app:fabSize="normal"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="Marcar como completado" />

    <!-- FAB Contactar (Medio - Posición 2) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_contactar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="168dp"
        android:src="@drawable/ic_messages"
        app:backgroundTint="#12A3ED"
        app:tint="@android:color/white"
        app:fabSize="normal"
        android:contentDescription="Contactar dueño" />

    <!-- FAB Cancelar (Abajo - Posición 3) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_cancelar_paseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:backgroundTint="#F44336"
        app:tint="@android:color/white"
        app:fabSize="normal"
        android:contentDescription="Cancelar paseo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_light" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bottom_nav_background"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemActiveIndicatorStyle="@null"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav_new" />

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

