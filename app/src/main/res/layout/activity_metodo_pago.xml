<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:navigationIconTint="#111827"
        app:title="Método de Pago"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banco"/>

        <AutoCompleteTextView
            android:id="@+id/et_banco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona banco"
            android:background="#FFFFFF"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Número de cuenta"/>

        <EditText
            android:id="@+id/et_numero_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0000000000"
            android:inputType="number"
            android:background="#FFFFFF"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_guardar_metodo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Guardar" />
    </LinearLayout>

</RelativeLayout>
