<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Skeleton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Saludo Skeleton -->
                <View
                    android:id="@+id/skeleton_saludo"
                    android:layout_width="80dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_skeleton_rounded"/>

                <!-- Nombre Usuario Skeleton -->
                <View
                    android:id="@+id/skeleton_nombre"
                    android:layout_width="160dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_skeleton_rounded"/>
            </LinearLayout>

            <!-- Avatar Skeleton -->
            <View
                android:id="@+id/skeleton_avatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_skeleton_circle"/>
        </LinearLayout>

        <!-- Título "¿Qué quieres hacer?" Skeleton -->
        <View
            android:id="@+id/skeleton_titulo_acciones"
            android:layout_width="180dp"
            android:layout_height="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_skeleton_rounded"/>

        <!-- Botones de Acción Rápida Skeleton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="32dp">

            <!-- Botón 1 Skeleton -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:id="@+id/skeleton_btn1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_skeleton_rounded"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_skeleton_rounded"/>
            </LinearLayout>

            <!-- Botón 2 Skeleton -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:id="@+id/skeleton_btn2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_skeleton_rounded"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_skeleton_rounded"/>
            </LinearLayout>

            <!-- Botón 3 Skeleton -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:id="@+id/skeleton_btn3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_skeleton_rounded"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_skeleton_rounded"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Título "Estado Actual" Skeleton -->
        <View
            android:id="@+id/skeleton_titulo_estado"
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_skeleton_rounded"/>

        <!-- Card Estado Paseo Skeleton -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header de la card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_skeleton_circle"/>

                    <View
                        android:layout_width="150dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_skeleton_rounded"/>
                </LinearLayout>

                <!-- Contenido de la card -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_skeleton_rounded"/>

                <View
                    android:layout_width="200dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_skeleton_rounded"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
