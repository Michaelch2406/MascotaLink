<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:navigationIconTint="#111827"
        app:title="Comportamiento y personalidad"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/bottom_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Nivel de energía -->
            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Nivel de energía"/>
            <RadioGroup
                android:id="@+id/rg_nivel_energia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bajo"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Moderado"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alto"/>
            </RadioGroup>

            <!-- Con personas -->
            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Comportamiento con personas" android:layout_marginTop="16dp"/>
            <RadioGroup
                android:id="@+id/rg_con_personas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Amigable"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tímido"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Agresivo"/>
            </RadioGroup>

            <!-- Con otros animales -->
            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Comportamiento con otros animales" android:layout_marginTop="16dp"/>
            <RadioGroup
                android:id="@+id/rg_con_otros_animales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Amigable"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Indiferente"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Agresivo"/>
            </RadioGroup>

            <!-- Con otros perros (2 filas) -->
            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Comportamiento con otros perros" android:layout_marginTop="16dp"/>
            <RadioGroup
                android:id="@+id/rg_con_otros_perros_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Amigable"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Juguetón"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tímido"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/rg_con_otros_perros_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Agresivo"/>
            </RadioGroup>

            <!-- Hábitos de correa (2 filas) -->
            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Hábitos de correa" android:layout_marginTop="16dp"/>
            <RadioGroup
                android:id="@+id/rg_habitos_correa_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Camina bien con correa"/>
                <View android:layout_width="12dp" android:layout_height="0dp"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tira de la correa"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/rg_habitos_correa_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Necesita entrenamiento"/>
            </RadioGroup>

            <!-- Textos multilínea -->
            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Comandos que conoce" android:layout_marginTop="16dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#E7EEF2">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_comandos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Miedos/Fobias" android:layout_marginTop="16dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#E7EEF2">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_miedos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView style="@style/TextAppearance.Mascota.CardTitle" android:text="Manías/Hábitos particulares" android:layout_marginTop="16dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#E7EEF2">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_manias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Guardar"/>
    </LinearLayout>

</RelativeLayout>
