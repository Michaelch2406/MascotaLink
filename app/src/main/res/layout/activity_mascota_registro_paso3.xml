<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MascotaRegistroPaso3Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="#111827"
            app:title="Comportamiento e Instrucciones"
            app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tarjeta de Comportamiento -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_dog"
                                android:layout_gravity="center"
                                app:tint="@color/green_success"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Comportamiento"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Describe la personalidad de tu mascota"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Nivel de energía -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comportamiento_energia_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/nivelEnergiaRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/energiaBajoRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_energia_baja"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:id="@+id/energiaModeradoRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_energia_moderada"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:id="@+id/energiaAltoRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_energia_alta"
                            android:textSize="13sp"/>
                    </RadioGroup>

                    <!-- Con personas -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comportamiento_con_personas_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/conPersonasRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/personasAmigableRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_con_personas_amigable"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:id="@+id/personasTimidoRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_con_personas_timido"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:id="@+id/personasAgresivoRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_con_personas_agresivo"
                            android:textSize="13sp"/>
                    </RadioGroup>

                    <!-- Con otros animales -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comportamiento_con_animales_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/conAnimalesRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/animalesAmigableRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_con_animales_amigable"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:id="@+id/animalesIndiferenteRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_con_animales_indiferente"
                            android:textSize="13sp"/>

                        <RadioButton
                            android:id="@+id/animalesAgresivoRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/comportamiento_con_animales_agresivo"
                            android:textSize="13sp"/>
                    </RadioGroup>

                    <!-- Con otros perros -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comportamiento_con_perros_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/conPerrosRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/perrosAmigableRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_con_animales_amigable"/>

                        <RadioButton
                            android:id="@+id/perrosJuguetonRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_con_perros_jugueton"/>

                        <RadioButton
                            android:id="@+id/perrosTimidoRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_con_personas_timido"/>

                        <RadioButton
                            android:id="@+id/perrosAgresivoRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_con_animales_agresivo"/>
                    </RadioGroup>

                    <!-- Hábitos de correa -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comportamiento_habitos_correa_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/habitosCorreaRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/correaCaminaBienRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_habitos_correa_camina_bien"/>

                        <RadioButton
                            android:id="@+id/correaTiraRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_habitos_correa_tira"/>

                        <RadioButton
                            android:id="@+id/correaNecesitaEntrenamientoRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comportamiento_habitos_correa_necesita_entrenamiento"/>
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Personalidad -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#FCE4EC">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_favorite"
                                android:layout_gravity="center"
                                app:tint="#E91E63"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personalidad"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Características únicas de tu mascota"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Comandos conocidos -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/comandosConocidosLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/comportamiento_comandos_conocidos_label"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/comandosConocidosEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Miedos y fobias -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/miedosFobiasLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/comportamiento_miedos_fobias_label"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/miedosFobiasEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:text="Ninguno"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Manías y hábitos -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/maniasHabitosLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:hint="@string/comportamiento_manias_habitos_label"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/maniasHabitosEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:text="Ninguno"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Instrucciones para el Paseador -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:backgroundTint="#E3F2FD">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_description"
                                android:layout_gravity="center"
                                app:tint="@color/blue_primary"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Instrucciones para el Paseador"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Información importante para los paseos"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Rutina de paseo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rutinaPaseoLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/instrucciones_rutina_paseo_label"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/rutinaPaseoEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="4"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tipo de correa/arnés -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tipoCorreaArnesLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/instrucciones_tipo_correa_arnes_label"
                        app:helperText="Opcional"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tipoCorreaArnesEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Recompensas -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/recompensasLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/instrucciones_recompensas_label"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recompensasEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="4"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Instrucciones de emergencia -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/instruccionesEmergenciaLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/instrucciones_emergencia_label"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/instruccionesEmergenciaEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="4"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Notas adicionales -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/notasAdicionalesLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:hint="@string/instrucciones_notas_adicionales_label"
                        app:helperText="Opcional"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/notasAdicionalesEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="4"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón fijo en la parte inferior -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/guardarButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="@string/guardar_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:enabled="false"
            app:backgroundTint="@color/blue_primary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_check_circle"
            app:iconGravity="end"
            app:iconTint="@color/white"
            android:stateListAnimator="@animator/fab_press_scale"/>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
