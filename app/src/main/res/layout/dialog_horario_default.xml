<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/horario_default_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configura tu horario de trabajo habitual"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- Days Section Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días Laborales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona los días que estás disponible para pasear."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/btnSeleccionarTodos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marcar todos"
                        android:textColor="@color/blue_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/btnDeseleccionarTodos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desmarcar todos"
                        android:textColor="@color/red_error"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>
                </LinearLayout>

                <GridLayout
                    android:id="@+id/grid_dias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4">

                    <CheckBox
                        android:id="@+id/cbLunes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Lunes"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>

                    <CheckBox
                        android:id="@+id/cbMartes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Martes"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>

                    <CheckBox
                        android:id="@+id/cbMiercoles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Miércoles"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>

                    <CheckBox
                        android:id="@+id/cbJueves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Jueves"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>

                    <CheckBox
                        android:id="@+id/cbViernes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Viernes"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>

                    <CheckBox
                        android:id="@+id/cbSabado"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Sábado"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>

                    <CheckBox
                        android:id="@+id/cbDomingo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Domingo"
                        android:textSize="16sp"
                        android:buttonTint="@color/blue_primary"/>
                </GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Schedule Section Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario General"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Define tu rango de horas activas para los días seleccionados."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Start Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desde"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_input_rounded"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_access_time"
                                app:tint="@color/blue_primary"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/tvHoraInicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:text="09:00"
                                android:clickable="true"
                                android:focusable="true"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- End Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasta"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_input_rounded"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_access_time"
                                app:tint="@color/blue_primary"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/tvHoraFin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:text="18:00"
                                android:clickable="true"
                                android:focusable="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disponibilidad_cancelar"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="@string/disponibilidad_guardar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                android:backgroundTint="@color/blue_primary"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
