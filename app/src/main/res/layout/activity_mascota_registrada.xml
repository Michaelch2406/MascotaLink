<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MascotaRegistradaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="#111827"
            app:title="Mascotas Registradas"
            app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tarjeta de Éxito -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center_horizontal">

                    <!-- Icono de éxito -->
                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:backgroundTint="#E8F5E9">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_gravity="center"
                            app:tint="@color/green_success"/>
                    </FrameLayout>

                    <!-- Título de éxito -->
                    <TextView
                        android:id="@+id/tvSuccessTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="¡Registro Exitoso!"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"/>

                    <!-- Subtítulo -->
                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tu mascota ha sido registrada correctamente"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"/>

                    <!-- Botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddAnother"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Agregar Otra Mascota"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/blue_primary"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_add_mascota"
                            app:iconGravity="textStart"
                            app:iconTint="@color/white"
                            android:stateListAnimator="@animator/fab_press_scale"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGoHome"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="Ir al Inicio"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_primary"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:strokeColor="@color/blue_primary"
                            app:strokeWidth="2dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_home"
                            app:iconGravity="textStart"
                            app:iconTint="@color/blue_primary"
                            android:stateListAnimator="@animator/fab_press_scale"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección de Mascotas Registradas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#FFF3E0">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pets"
                        android:layout_gravity="center"
                        app:tint="#FF9800"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Mis Mascotas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark"/>
            </LinearLayout>

            <!-- RecyclerView de Mascotas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMascotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_mascota_registrada"
                tools:itemCount="3"/>

            <!-- Estado vacío -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_pet_placeholder"
                    android:alpha="0.3"
                    app:tint="@color/gray_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No hay mascotas registradas"
                    android:textSize="16sp"
                    android:textColor="@color/gray_text"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
