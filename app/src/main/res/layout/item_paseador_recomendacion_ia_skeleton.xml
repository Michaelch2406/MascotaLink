<?xml version="1.0" encoding="utf-8"?>
<!--
    Skeleton loader para recomendación IA
    Versión de loading del item_paseador_recomendacion_ia.xml
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F8"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="32dp"
    android:paddingTop="16dp">

    <!-- Título skeleton -->
    <View
        android:id="@+id/skeletonTitle"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo skeleton -->
    <View
        android:id="@+id/skeletonSubtitle"
        android:layout_width="160dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/skeletonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/skeletonSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Chip "RECOMENDADO" skeleton -->
            <View
                android:layout_width="140dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="#E0E0E0" />

            <!-- Foto perfil skeleton -->
            <View
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_avatar_circle"
                android:backgroundTint="#E0E0E0" />

            <!-- Nombre skeleton -->
            <View
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0" />

            <!-- Ubicación skeleton -->
            <View
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0" />

            <!-- Badge skeleton -->
            <View
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0" />

            <!-- Métricas (Rating y Precio) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <!-- Rating skeleton -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="18dp"
                        android:background="#E0E0E0" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="6dp"
                        android:background="#E0E0E0" />
                </LinearLayout>

                <!-- Precio skeleton -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="18dp"
                        android:background="#E0E0E0" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="6dp"
                        android:background="#E0E0E0" />
                </LinearLayout>

            </LinearLayout>

            <!-- Razón IA skeleton (texto explicativo) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0" />

            <!-- Razones skeleton (chips) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <View
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="#E0E0E0" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="#E0E0E0" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- Botones skeleton -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="#E0E0E0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- Texto de carga -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="✨ Buscando tu match perfecto..."
                android:textSize="14sp"
                android:textColor="#6B46FF"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
