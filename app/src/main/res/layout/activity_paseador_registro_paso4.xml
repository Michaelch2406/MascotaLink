<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:navigationIconTint="#111827"
        app:title="Paseos"
        app:titleTextAppearance="@style/TextAppearance.Mascota.ToolbarTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/bottom_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección 1: Comparte tu experiencia -->
            <TextView
                style="@style/TextAppearance.Mascota.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Comparte tu experiencia"/>

            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Muestra tu experiencia con fotos o videos de paseos anteriores. También, completa un cuestionario para demostrar tus conocimientos sobre el cuidado de mascotas."/>

            <!-- Sección 2: Galería de paseos -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Galería de paseos"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/placeholder_img1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/galeria_paseos_foto1"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFFFF"
                    android:contentDescription="foto1"/>
                <View android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView
                    android:id="@+id/placeholder_img2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/galeria_paseos_foto2"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFFFF"
                    android:contentDescription="foto2"/>
                <View android:layout_width="8dp" android:layout_height="0dp"/>
                <ImageView
                    android:id="@+id/placeholder_img3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/galeria_paseos_foto3"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFFFF"
                    android:contentDescription="foto3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_galeria"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Galería"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    app:strokeColor="#CBD5E1"
                    app:strokeWidth="1dp"/>

                <View
                    android:layout_width="12dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_camara"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Cámara"
                    style="@style/Widget.Mascota.PrimaryPillButton"/>
            </LinearLayout>

            <!-- Sección 3: Cuestionario -->
            <TextView
                style="@style/TextAppearance.Mascota.CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cuestionario de conocimientos"/>

            <TextView
                style="@style/TextAppearance.Mascota.BodyMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Responde a las siguientes preguntas para demostrar tu experiencia y conocimientos sobre el cuidado de mascotas."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:elevation="1dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="icono"
                    app:tint="#111827" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuestionario de conocimientos"
                        style="@style/TextAppearance.Mascota.Label"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comportamiento canino, primeros auxilios, manejo de emergencias y normas de seguridad"
                        style="@style/TextAppearance.Mascota.BodyMuted"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_comenzar_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Comenzar"
                    style="@style/Widget.Mascota.PrimaryPillButton"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_guardar_continuar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Guardar y continuar"
            style="@style/Widget.Mascota.PrimaryButton"/>
    </LinearLayout>

</RelativeLayout>
