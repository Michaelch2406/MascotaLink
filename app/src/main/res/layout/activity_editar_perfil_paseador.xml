<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC"
    tools:context=".EditarPerfilPaseadorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FAFC"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/gray_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Editar Perfil Paseador"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Nombre"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tu nombre"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Apellido -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Apellido"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tu apellido"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Correo Electrónico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Correo Electrónico"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D1D5DB"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tu correo electrónico"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/transparent"
                    android:textColor="#4B5563"
                    android:textColorHint="#9CA3AF"
                    android:enabled="false"/>
            </LinearLayout>

            <!-- Teléfono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Teléfono"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tu teléfono"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Domicilio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Domicilio"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_domicilio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa tu domicilio"
                    android:inputType="textPostalAddress"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Motivación / Acerca de mí -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Acerca de mí (Motivación)"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_motivacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cuéntanos sobre ti y tu motivación"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Video de presentación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Video de presentación"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="#E7EEF2">

                <VideoView
                    android:id="@+id/video_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ProgressBar
                    android:id="@+id/video_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_subir_video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subir Video"
                    style="@style/Widget.Mascota.PrimaryButton"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_grabar_video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grabar Nuevo"
                    style="@style/Widget.Mascota.PrimaryButton"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Inicio de Experiencia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Inicio de experiencia"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7EEF2"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/et_inicio_experiencia_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona una fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawableTint="@color/gray_dark"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>



            <!-- Tipos de perros -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Mascota.Label"
                android:text="Tipos de perros que paseas"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_tipos_perros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_pequenos"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pequeños"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_medianos"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medianos"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_grandes"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grandes"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btn_guardar_cambios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Guardar Cambios"
                style="@style/Widget.Mascota.PrimaryButton"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>