<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/spacer_medium"
        android:showDividers="middle">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtros y Ordenamiento"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="16dp"/>

        <!-- Ordenamiento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenar por"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_ordenar_por"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Filtro de Distancia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_distancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distancia (km)"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_distancia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="50"
                app:values="@array/initial_range_slider_values_distancia"
                app:labelBehavior="visible"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <!-- Filtro de Precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarifa por hora ($)"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                app:values="@array/initial_range_slider_values_precio"
                app:labelBehavior="visible"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <!-- Filtro de Calificación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificación mínima"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginBottom="8dp"/>

            <RatingBar
                android:id="@+id/rating_bar_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0" />
        </LinearLayout>

        <!-- Filtro de Tipo de Mascota -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admite mascotas de tamaño"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tamano_mascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_pequeno"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pequeño"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mediano"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mediano"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_grande"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grande"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/button_limpiar_filtros"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpiar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/button_aplicar_filtros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplicar"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
