<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MascotaLink" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">#13A4EC</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="Theme.MascotaLink" parent="Base.Theme.MascotaLink" />
    
    <!-- Custom TextInputLayout style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#6B7280</item>
        <item name="hintTextColor">#6B7280</item>
    </style>

    <!-- Typography -->
    <style name="TextAppearance.Mascota.ToolbarTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Mascota.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Mascota.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#13A4EC</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.Mascota.PrimaryPillButton" parent="Widget.Material3.Button">
        <item name="android:height">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#13A4EC</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>