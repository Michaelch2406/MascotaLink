<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MascotaLink" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">#13A4EC</item>
        <item name="colorPrimaryDark">#0D8AC7</item> <!-- Necesario en MaterialComponents -->
        <item name="colorAccent">#13A4EC</item> <!-- Controla widgets como checkbox/radio -->
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary -->
        <item name="colorSecondary">#13A4EC</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Backgrounds & Surfaces (BLANCO DE VERDAD) -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#111827</item>
        
        <!-- Eliminar el rosa en enlaces -->
        <item name="android:textColorLink">#13A4EC</item>

        <!-- Ripple Neutral -->
        <item name="colorControlHighlight">#1A000000</item>

        <!-- SYSTEM BARS -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Navigation Bar Blanca Opaca -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Botones: Forzar estilo Material 3 visualmente -->
        <item name="materialButtonStyle">@style/Widget.Mascota.PrimaryButton</item>
    </style>

    <style name="Theme.MascotaLink" parent="Base.Theme.MascotaLink" />
    
    <!-- Custom TextInputLayout style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#6B7280</item>
        <item name="hintTextColor">#6B7280</item>
    </style>

    <!-- Typography -->
    <style name="TextAppearance.Mascota.ToolbarTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Mascota.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Mascota.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Mascota.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:height">56dp</item> <!-- Altura estándar moderna -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item> <!-- Forzar tamaño legible -->
        <item name="backgroundTint">#13A4EC</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.Mascota.PrimaryPillButton" parent="Widget.MaterialComponents.Button">
        <item name="android:height">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#13A4EC</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ClusterIcon_TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Shapes -->
    <style name="ShapeAppearance.App.Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Rating Bar Theme -->
    <style name="RatingBarTheme" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/gray_border</item>
        <item name="colorControlActivated">#FFB300</item> <!-- Gold -->
    </style>

    <!-- Style for Calendar Day Headers -->
    <style name="DayHeaderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>