<?xml version="1.0" encoding="utf-8"?>
<!-- AnimaciÃ³n FAB: hover:scale-110 active:scale-95 del HTML -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado: escala hacia abajo (0.95) -->
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="80"
                android:valueTo="0.95"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="80"
                android:valueTo="0.95"
                android:valueType="floatType" />
        </set>
    </item>
    <!-- Estado normal -->
    <item>
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="150"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="150"
                android:valueTo="1.0"
                android:valueType="floatType" />
        </set>
    </item>
</selector>
