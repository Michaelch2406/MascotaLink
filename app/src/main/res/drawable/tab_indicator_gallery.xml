<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado Seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/> <!-- Bordes redondeados -->
            <solid android:color="@color/blue_primary"/>
            <size android:width="24dp" android:height="8dp"/> <!-- Ancho extendido -->
        </shape>
    </item>
    <!-- Estado No Seleccionado -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF"/> <!-- Blanco semi-transparente para mejor contraste en fondo negro -->
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>
</selector>