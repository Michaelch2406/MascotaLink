<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado Seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/blue_primary" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Estado Deshabilitado (No disponible) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#F3F4F6" /> <!-- Gris muy claro -->
            <stroke android:width="1dp" android:color="#E5E7EB" />
        </shape>
    </item>

    <!-- Estado Normal (Disponible) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="#D1D5DB" /> <!-- Borde gris suave -->
        </shape>
    </item>
</selector>