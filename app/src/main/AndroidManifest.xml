            android:value="@integer/google_play_services_version" />

        <!-- ML Kit: Auto-download de modelos en instalación (reduce APK, descarga on-demand) -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="face,ocr" />

